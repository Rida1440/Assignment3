<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="workoutNameTextField">Workout Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Workout Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="workoutTypeTextField">Workout Type</label>
                    <input type="text" class="form-control" id="workoutTypeTextField" placeholder="Enter the Workout Type (e.g., Crdio,Strength)" name="Type" required>
                </div>
                <div class="form-group">
                    <label for="workoutDurationTextField">Duration (in minutes)</label>
                    <input type="number" class="form-control" id="workoutDurationTextField" placeholder="Enter Duration" name="Duration" required>
                </div>
                <div class="form-group">
                    <label for="workoutDescriptionTextArea">Workout Description</label>
                    <textarea type="text" class="form-control" id="workoutDescriptionTextArea"  placeholder="enter the Workout Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="WorkoutIntensityTextField">Intensity</label>
                    <input type="text" class="form-control" id="WorkoutIntensityTextField" placeholder="Enter the Workout Intensity (e.g., Low,Medium,High)" name="Intensity" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>